<div class="grid">
    <div class="card line1">
      <div class="card-body">
        <h2 class="card-title">{{data.lines.[0].label}}</h2>
        <div class="card-text">
          <div class="block col-3">
            <i class="bi bi-upc-scan" style="font-size: 2em"></i>
          </div>
          <div class="block col-9 total">
            <p class="total">{{data.lines.[0].total}}</p>
          </div>
        </div>
      </div>
    </div>
    <div class="card line2">
      <div class="card-body">
        <h2 class="card-title">{{data.lines.[1].label}}</h2>
        <div class="card-text">
          <div class="block col-3">
            <i class="bi bi-lightning-charge-fill" style="font-size: 2em"></i>
          </div>
          <div class="block col-9 total">
            <p class="total">{{data.lines.[1].total}}</p>
          </div>
        </div>
      </div>
    </div>
    <div class="card line3">
      <div class="card-body">
        <h2 class="card-title">{{data.lines.[2].label}}</h2>
        <div class="card-text">
          <div class="block col-3">
            <i class="bi bi-mouse2-fill" style="font-size: 2em"></i>
          </div>
          <div class="block col-9 total">
            <p class="total">{{data.lines.[2].total}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
<div class="c-smart-chart">
  <div class="c-smart-chart__content">
